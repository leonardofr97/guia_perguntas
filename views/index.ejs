<!-- usando partials para reutilizar codigos HTML nos scripts .ejs -->
<%- include("partials/header") %>
<body>
    <%- include("partials/navbar") %>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Fazer uma pergunta</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>

            <br>
            <div class="card">
                <div class="card-header">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-body">
                    <h5><%= pergunta.descricao %></h5>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary stretched-link">Responder</button></a>
                </div>
            </div>

        <% }) %>
    </div>
    
</body>
<%- include("partials/footer") %>